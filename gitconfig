[alias]
	l = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  currentbranch = !git branch --contains HEAD | grep '*' | tr -s ' ' | cut -d ' ' -f2
  root = rev-parse --show-toplevel
  st = status
  pr = pull --rebase
  ds = diff --staged
  cm = commit -m
  co = checkout
  d = diff
  duff = diff
[push]
  default = tracking
