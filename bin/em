#!/usr/bin/env fish
function em
  if [ $argv[1] = "--wait" ]
    set files $argv[2..-1]
  else
    set files $argv
    set clientflags "--no-wait"
  end

  if test -z (pgrep Emacs)
    env LANG=C open -a Emacs $files
    echo "Emacs: starting up"
    return
  end

  echo "Emacs: running"
  alias client "/usr/local/bin/emacsclient"
  set -l uid    (id -u)
  set -l socket $TMPDIR/emacs$uid/server

  if not test -e $socket
    socket (getconf DARWIN_USER_TEMP_DIR)emacs"$uid"/server
  end

  client $clientflags -s $socket $files
end

em $argv
