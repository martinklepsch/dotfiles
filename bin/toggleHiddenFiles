#!/usr/bin/env bash
# Simple script to display/hide hidden files in Mac OS X

status=´defaults read com.apple.finder AppleShowAllFiles´


if ((status)); then
	´defaults write com.apple.finder AppleShowAllFiles FALSE´
	´killall finder´
	echo $status
	echo "Display of hidden files is now deactivated."
else
	´defaults write com.apple.finder AppleShowAllFiles TRUE´
	´killall finder´
	echo $status
	echo "Display of hidden files is now activated."
fi
exit $?
